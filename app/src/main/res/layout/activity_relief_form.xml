<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AfterLogin.ReliefFormActivity"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Relief form"
        android:textSize="27dp"/>

    <EditText
        android:id="@+id/details"
        android:hint="Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />






    <EditText
        android:id="@+id/material"
        android:hint="Material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <EditText
        android:id="@+id/quantity"
        android:hint="Quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/district"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <Spinner
        android:id="@+id/locality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/landmarks"
        android:hint="Landmarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/requestReliefButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Request Relief"
        android:onClick="requestReliefClick"/>

</LinearLayout>